<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/home_menu_blue_press" />
            <corners android:radius="@dimen/home_menu_radius" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/home_menu_blue_press" />
            <corners android:radius="@dimen/home_menu_radius" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/home_menu_blue_press" />
            <corners android:radius="@dimen/home_menu_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/home_menu_blue" />
            <corners android:radius="@dimen/home_menu_radius" />
        </shape>
    </item>
</selector>