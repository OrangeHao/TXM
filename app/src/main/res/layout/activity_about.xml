<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <include layout="@layout/appbar_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/space40">

        <ImageView
            android:id="@+id/avatarImg"
            android:layout_width="@dimen/activity_avatar_size4"
            android:layout_height="@dimen/activity_avatar_size4"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space04"
            tools:text="公司"
            android:textSize="@dimen/font16" />

        <TextView
            android:id="@+id/versionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="v1.0.0"
            android:textSize="@dimen/font16" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/versionLayout"
        style="@style/ArrowItemLayoutStyle"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/about_version_update"
            android:textSize="@dimen/font16" />


        <ImageView
            android:id="@+id/arrow_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/base_right_arrow"
            />

        <TextView
            android:id="@+id/versionMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="The latest version"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space08"
            android:layout_marginLeft="@dimen/space08"
            android:layout_toLeftOf="@id/arrow_1"
            android:layout_toRightOf="@id/text_1"
            android:gravity="right"
            android:textColor="@color/textDefualt3"
            android:textSize="@dimen/font16" />
    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <!--客服电话-->
    <RelativeLayout
        android:id="@+id/serviceLayout"
        style="@style/ArrowItemLayoutStyle"
        >

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/about_version_update"
            android:textSize="@dimen/font16" />


        <TextView
            android:id="@+id/setvicePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="The latest version"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space08"
            android:textColor="@color/textDefualt3"
            android:textSize="@dimen/font16" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/copyRightTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/activity_vertical_margin"
            android:textColor="@color/textDefualt2"
            android:text="@string/about_copyright"
            android:textSize="@dimen/font12" />
    </RelativeLayout>

</LinearLayout>