<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space08"
    android:padding="@dimen/space08"
    android:background="@drawable/selector_shape_bg_white_gray"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space08"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_size_title"
            tools:text="调整158路公交首末站"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space08"
        android:layout_marginLeft="@dimen/space08"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/textDefualt3"
        tools:text="2017-10-28 08:39"
        />

    <TextView
        android:id="@+id/content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space08"
        android:layout_marginTop="@dimen/space08"
        android:textSize="@dimen/text_size_normal"
        tools:text="调整158路公交首末站调整158路公交首末站调整158路公交首末站调整158路公交首末站调整158路公交首末站调整158路公交首末站"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_line_height"
        android:layout_marginTop="@dimen/space16"
        android:layout_marginBottom="@dimen/space08"
        android:background="#f2f2f2"/>


    <TextView
        android:id="@+id/company_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space08"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/textDefualt3"
        tools:text="帝国公交集团"
        />

</LinearLayout>